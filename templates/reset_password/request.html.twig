{% extends 'base.html.twig' %}

{% block title %}
	Réinitialisation Mot de Passe | DealGames
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 col-md-9 col-lg-6 mx-auto p-5 shadow-custom rounded-3">
			{% for flash_error in app.flashes('reset_password_error') %}
				<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
			{% endfor %}

			<h1 class="mb-4">Réinitialisez votre Mot de Passe</h1>

			{{ form_start(requestForm) }}

			{{ form_row(requestForm.email) }}
			<div>
				<small>
					Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
				</small>
			</div>

			<span class="d-flex justify-content-center">
				<button class="btn btn-primary btn-lg mt-4">Confirmer</button>
			</span>

			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}
