{% extends 'base.html.twig' %}

{% block title %}
	Mon Compte | DealGames
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 col-md-9 col-lg-8 mx-auto p-5 shadow-custom rounded-3">
			<h1 class="mb-5">Mon Compte |
				{{ app.user.firstname }}
				{{ app.user.lastname }}</h1>
			<div class="row">
				<div class="col-12 col-lg-6 mb-4">
					<a href="{{ path('app_account_profil') }}" class="d-flex flex-column justify-content-center align-items-center shadow-custom rounded-3 p-5">
						<i class="fa-solid fa-circle-info fs-1 mb-3"></i>
						<h2 class="fs-5">Mes Informations</h2>
					</a>
				</div>
				<div class="col-12 col-lg-6">
					<a href="{{ path('app_account_items') }}" class="d-flex flex-column justify-content-center align-items-center shadow-custom rounded-3 p-5">
						<i class="fa-solid fa-book-open fs-1 mb-3"></i>
						<h2 class="fs-5">Mes Annonces</h2>
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
