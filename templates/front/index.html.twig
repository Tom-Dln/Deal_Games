{% extends 'base.html.twig' %}

{% block title %}
	Accueil | DealGames
{% endblock %}

{% block body %}
	{{ items.getTotalItemCount }}
	Annonces

	<div class="row">
		{% for item in items %}
			<div class="col-4 mb-4">
				<div class="card h-100">
					<img src="{{ vich_uploader_asset(item) }}" class="card-img-top" alt="{{ item.title }}">
					<div class="card-body">
						<h5 class="card-title">{{ item.title }}</h5>
						<p class="card-text">{{ item.description|u.truncate(150, '...') }}</p>
					</div>
					<div class="card-footer d-flex justify-content-between align-items-center">
						<small class="text-muted">{{ item.published|date("m/d/Y \\Ã  H:i") }}</small>
						<a class="btn btn-secondary" href="{{ path('app_item_show', {id:item.id}) }}" role="button">
							<i class="fa-solid fa-arrow-right-long"></i>
						</a>
					</div>
				</div>
			</div>
		{% endfor %}
		{{ knp_pagination_render(items) }}
	</div>
{% endblock %}
