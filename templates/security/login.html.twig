{% extends 'base.html.twig' %}

{% block title %}
	Se Connecter | DealGames
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 col-md-9 col-lg-6 mx-auto p-5 shadow-custom rounded-3">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						Vous êtes connecté en tant que
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">Se Déconnecter</a>
					</div>
				{% endif %}

				<h1 class="mb-4 font-weight-normal">Se Connecter</h1>
				<div class="mb-3">
					<label for="inputEmail" class="form-label">Adresse mail</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</div>
				<div class="mb-3">
					<label for="inputPassword" class="form-label">Mot de Passe</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div class="checkbox mb-3">
					<label>
						<input type="checkbox" name="_remember_me">
						Se souvenir de moi
					</label>
				</div>

				<span class="d-flex justify-content-center">
					<button class="btn btn-primary btn-lg mt-4" type="submit">
						Se Connecter
					</button>
				</span>
			</form>
			<p class="text-center mt-5">Envie de nous rejoindre ?
				<a href="{{ path('app_register') }}">Créer un Compte</a>
			</p>
		</div>
	</div>

{% endblock %}
